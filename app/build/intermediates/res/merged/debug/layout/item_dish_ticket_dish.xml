<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <TextView
        android:id="@+id/tv_dish_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/ll_sub_plus"
        android:layout_marginTop="@dimen/margin_15"
        android:layout_marginLeft="@dimen/margin_26"
        android:singleLine="true"
        android:text="大肉丸"
        android:textColor="@color/tv_cafe"
        android:textIsSelectable="false"
        android:textSize="@dimen/tv_36" />

    <TextView
        android:id="@+id/tv_dish_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_dish_name"
        android:layout_marginLeft="@dimen/margin_26"
        android:layout_marginBottom="@dimen/margin_15"
        android:singleLine="true"
        android:text="988"
        android:textColor="@color/yellow"
        android:textIsSelectable="false"
        android:textSize="@dimen/tv_36" />
    <LinearLayout
            android:id="@+id/ll_sub_plus"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/margin_20"
            android:orientation="horizontal" >
     <Button
                android:id="@+id/btn_dish_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_dish_sub"
                android:focusable="false"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_dish_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_marginRight="@dimen/margin_5"
                android:singleLine="true"
                android:text="2"
                android:textColor="@color/tv_cafe"
                android:textIsSelectable="false"
                android:textSize="@dimen/tv_36"
                android:visibility="invisible" />

            <Button
                android:id="@+id/btn_dish_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_15"
                android:background="@drawable/btn_dish_plus"
                android:focusable="false" />
    </LinearLayout>

</RelativeLayout>