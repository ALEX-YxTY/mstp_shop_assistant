<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/margin_15"
    android:layout_marginRight="@dimen/margin_15"
    android:orientation="vertical" 
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rl_paid_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2px"
        android:background="@color/white"
        android:paddingBottom="@dimen/margin_30"
        android:paddingTop="@dimen/margin_30" >

        <TextView
            android:id="@+id/tv_tag_pain_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_26"
            android:text="实付金额："
            android:textColor="@color/tv_cafe"
            android:textSize="@dimen/tv_36" />

        <TextView
            android:id="@+id/tv_pain_in"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_26"
            android:layout_toRightOf="@+id/tv_tag_pain_in"
            android:textColor="@color/tv_cafe"
            android:textSize="@dimen/tv_36" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_user_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2px"
        android:background="@color/white"
        android:paddingBottom="@dimen/margin_30"
        android:paddingTop="@dimen/margin_30" >

        <TextView
            android:id="@+id/tv_tag_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_26"
            android:text="@string/tag_user_note"
            android:textColor="@color/tv_cafe"
            android:textSize="@dimen/tv_36" />

        <TextView
            android:id="@+id/tv_user_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_26"
            android:layout_toRightOf="@+id/tv_tag_note"
            android:textColor="@color/tv_cafe"
            android:textSize="@dimen/tv_36" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_shop_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_light_gray"
        android:layout_marginLeft="@dimen/margin_26"
        android:layout_marginRight="@dimen/margin_26"
        android:layout_marginTop="@dimen/margin_15"
        android:layout_marginBottom="@dimen/margin_15"
        android:paddingBottom="@dimen/margin_15"
        android:paddingLeft="@dimen/margin_10"
        android:paddingTop="@dimen/margin_15" >

        <!-- 
        <TextView
            android:id="@+id/tv_tag_shop_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_26"
            android:text="@string/tag_shop_note"
            android:textColor="@color/tv_cafe"
            android:textSize="@dimen/tv_36" /> -->

        <EditText
            android:id="@+id/et_waiter_note"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_10"
            android:background="@color/light_light_gray"
            android:enabled="true"
            android:hint="请输入其他需求"
            android:textColor="@color/tv_cafe"
            android:textSize="@dimen/tv_36" />

        <TextView
            android:id="@+id/tv_show_waiter_note"
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/down_list" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_trade_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2px"
        android:background="@color/white"
        android:paddingBottom="@dimen/margin_30"
        android:paddingTop="@dimen/margin_30" >

        <TextView
            android:id="@+id/tv_tag_pay_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_26"
            android:text="@string/tag_pay_note"
            android:textColor="@color/tv_cafe"
            android:textSize="@dimen/tv_36" />

        <TextView
            android:id="@+id/tv_trade_no"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_26"
            android:layout_toRightOf="@+id/tv_tag_pay_note"
            android:textColor="@color/tv_cafe"
            android:textSize="@dimen/tv_36" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_invoice_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2px"
        android:background="@color/white"
        android:paddingBottom="@dimen/margin_30"
        android:paddingTop="@dimen/margin_30" >

        <TextView
            android:id="@+id/tv_tag_invoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_26"
            android:text="发票抬头："
            android:textColor="@color/tv_cafe"
            android:textSize="@dimen/tv_36" />

        <TextView
            android:id="@+id/tv_invoice_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_26"
            android:layout_toRightOf="@+id/tv_tag_invoice"
            android:background="@color/white"
            android:textColor="@color/tv_cafe"
            android:textSize="@dimen/tv_36" />
    </RelativeLayout>

</LinearLayout>