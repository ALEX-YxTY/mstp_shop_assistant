<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/rl_order_dish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_btn_full_width"
                android:padding="@dimen/margin_20" >

                <ImageView
                    android:id="@+id/iv_order_dish"
                    android:layout_width="@dimen/option_item_icon_w"
                    android:layout_height="@dimen/option_item_icon_w"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/option_item_conten_hzrtl_side_margin"
                    android:src="@drawable/bg_more_change_pwd" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/option_item_text_icon_margin"
                    android:layout_toRightOf="@+id/iv_order_dish"
                    android:text="@string/order_dish"
                    android:textColor="@color/tv_cafe"
                    android:textSize="@dimen/option_item_text_sz" />

                <ImageView
                    android:id="@+id/iv_clear_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/option_item_conten_hzrtl_side_margin"
                    android:src="@drawable/about_right_arrow" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_ticket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_btn_full_width"
                android:padding="@dimen/margin_20" >

                <ImageView
                    android:id="@+id/iv_ticket"
                    android:layout_width="@dimen/option_item_icon_w"
                    android:layout_height="@dimen/option_item_icon_w"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/option_item_conten_hzrtl_side_margin"
                    android:src="@drawable/bg_order_inquiry_icon" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/option_item_text_icon_margin"
                    android:layout_toRightOf="@+id/iv_ticket"
                    android:text="@string/orderInshop"
                    android:textColor="@color/tv_cafe"
                    android:textSize="@dimen/option_item_text_sz" />

                <ImageView
                    android:id="@+id/iv_clear_arrow2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/option_item_conten_hzrtl_side_margin"
                    android:src="@drawable/about_right_arrow" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_32"
                android:layout_marginLeft="@dimen/margin_62"
                android:background="@color/transparent" />

            <RelativeLayout
                android:id="@+id/rl_team_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_btn_full_width"
                android:padding="@dimen/margin_20" >

                <ImageView
                    android:id="@+id/iv_team_list"
                    android:layout_width="@dimen/option_item_icon_w"
                    android:layout_height="@dimen/option_item_icon_w"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/option_item_conten_hzrtl_side_margin"
                    android:src="@drawable/bg_take_the_no_icon" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/option_item_text_icon_margin"
                    android:layout_toRightOf="@+id/iv_team_list"
                    android:text="@string/team_num"
                    android:textColor="@color/tv_cafe"
                    android:textSize="@dimen/option_item_text_sz" />

                <ImageView
                    android:id="@+id/iv_clear_arrow3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/option_item_conten_hzrtl_side_margin"
                    android:src="@drawable/about_right_arrow" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/margin_62"
                android:background="@color/transparent" />

            <RelativeLayout
                android:id="@+id/rl_backend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_btn_full_width"
                android:padding="@dimen/margin_20" >

                <ImageView
                    android:id="@+id/iv_backend"
                    android:layout_width="@dimen/option_item_icon_w"
                    android:layout_height="@dimen/option_item_icon_w"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/option_item_conten_hzrtl_side_margin"
                    android:src="@drawable/bg_more_check_update_icon" />

                <TextView
                    android:id="@+id/tv_check_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/option_item_text_icon_margin"
                    android:layout_toRightOf="@+id/iv_backend"
                    android:text="@string/backend"
                    android:textColor="@color/tv_cafe"
                    android:textSize="@dimen/option_item_text_sz" />

                <ImageView
                    android:id="@+id/iv_check_update_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/option_item_conten_hzrtl_side_margin"
                    android:src="@drawable/about_right_arrow" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_32"
                android:background="@color/transparent" />

            <RelativeLayout
                android:id="@+id/rl_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_btn_full_width"
                android:padding="@dimen/margin_20" >

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="@dimen/option_item_icon_w"
                    android:layout_height="@dimen/option_item_icon_w"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/option_item_conten_hzrtl_side_margin"
                    android:src="@drawable/bg_set_up_icon" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/option_item_text_icon_margin"
                    android:layout_toRightOf="@+id/imageView7"
                    android:text="@string/settings"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/tv_cafe"
                    android:textSize="@dimen/option_item_text_sz" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/option_item_conten_hzrtl_side_margin"
                    android:src="@drawable/about_right_arrow" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_64"
                android:background="@color/transparent" />

            <RelativeLayout
                android:id="@+id/rl_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_btn_vip_edit_tel"
                android:padding="@dimen/margin_20"
                android:layout_marginLeft="@dimen/margin_102"
                android:layout_marginRight="@dimen/margin_102"
                 >

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="@string/login_out"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/white"
                    android:textSize="@dimen/option_item_text_sz" />

            </RelativeLayout>  
        </LinearLayout>
    </ScrollView>    
</LinearLayout>
