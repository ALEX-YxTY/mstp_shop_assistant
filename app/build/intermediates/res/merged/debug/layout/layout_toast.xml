<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:padding="@dimen/margin_30"
    android:gravity="center"
    android:background="@drawable/bg_toast_self"
    >
    
    <ImageView
        android:id="@+id/img_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/icon_notify_sel"/>
    <TextView 
        android:id="@+id/tv_toast_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8"
        android:text=""
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/tv_30"
        android:textColor="@color/white"/>

</LinearLayout>
