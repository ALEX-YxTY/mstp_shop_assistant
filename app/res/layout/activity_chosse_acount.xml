<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
   <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/more_title_h"
        android:background="@color/light_orange">

        <Button
            android:id="@+id/bt_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_20"
            android:background="@color/light_orange"
            android:drawableLeft="@drawable/btn_back_nor"
            android:text="返回"
            android:textColor="@color/light_orange" />
		<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/choose_merchant"
            android:textColor="@color/white"
            android:textSize="@dimen/more_title_txt_sz" />

    </RelativeLayout>
	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingLeft="@dimen/margin_20"
		android:paddingTop="@dimen/margin_20"
		android:paddingBottom="@dimen/margin_20"
		android:text="@string/contract_merchant"
		android:textSize="@dimen/tv_42"
		android:textColor="@color/tv_gray"/>
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    >
	    <TextView
	        android:id="@+id/tv_merchant"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="@dimen/margin_20"
			android:paddingTop="@dimen/margin_20"
			android:text="@string/merchant"
			android:textSize="@dimen/tv_42"
			android:textColor="@color/tv_cafe"/>
	    <TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="@dimen/margin_20"
			android:paddingTop="@dimen/margin_5"
			android:paddingBottom="@dimen/margin_20"
			android:text="@string/merchant_nickname"
			android:textSize="@dimen/tv_30"
			android:textColor="@color/tv_cafe2"/>
	</LinearLayout>
	<TextView
	    android:id="@+id/tv_merchant_city"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingLeft="@dimen/margin_20"
		android:paddingTop="@dimen/margin_20"
		android:paddingBottom="@dimen/margin_20"
		android:text="@string/merchant_city"
		android:textSize="@dimen/tv_42"
		android:textColor="@color/tv_gray"/>
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    >
	    <TextView
	        android:id="@+id/tv_merchant_name"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="@dimen/margin_20"
			android:paddingTop="@dimen/margin_20"
			android:text="@string/store_name"
			android:textSize="@dimen/tv_42"
			android:textColor="@color/tv_cafe"/>
	    <TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="@dimen/margin_20"
			android:paddingTop="@dimen/margin_5"
			android:paddingBottom="@dimen/margin_20"
			android:text="@string/merchant_nickname"
			android:textSize="@dimen/tv_30"
			android:textColor="@color/tv_cafe2"/>
	</LinearLayout>
</LinearLayout>
