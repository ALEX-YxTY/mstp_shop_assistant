<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rl_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_btn_full_width_nor"
        android:padding="@dimen/margin_20" >

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/option_item_conten_hzrtl_side_margin"
            android:src="@drawable/bg_user_nick_name" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/option_item_text_icon_margin"
            android:layout_toRightOf="@+id/imageView7"
            android:textColor="@color/tv_cafe"
            android:textSize="@dimen/tv_36" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_user_tel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_btn_full_width"
        android:padding="@dimen/margin_20" >

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/option_item_conten_hzrtl_side_margin"
            android:src="@drawable/bg_tel" />

        <TextView
            android:id="@+id/tv_user_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/option_item_text_icon_margin"
            android:layout_toRightOf="@+id/imageView8"
            android:textColor="@color/tv_cafe"
            android:textSize="@dimen/tv_36" />
    </RelativeLayout>

   

    <RelativeLayout
        android:id="@+id/rl_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_btn_full_width_nor"
        android:padding="@dimen/margin_20" >

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/option_item_conten_hzrtl_side_margin"
            android:src="@drawable/bg_addr_big" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/option_item_conten_hzrtl_side_margin"
            android:src="@drawable/about_right_arrow" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/option_item_text_icon_margin"
            android:layout_toLeftOf="@+id/imageView10"
            android:layout_toRightOf="@+id/imageView9"
            android:textColor="@color/tv_cafe"
            android:textSize="@dimen/tv_36" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_arrive_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_btn_full_width_nor"
        android:padding="@dimen/margin_20" >

        <TextView
            android:id="@+id/img_arrive_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/option_item_conten_hzrtl_side_margin"
            android:background="@drawable/bg_time" />

        <TextView
            android:id="@+id/tv_arrive_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_arrive_time"
            android:layout_marginLeft="@dimen/option_item_text_icon_margin"
            android:textColor="@color/tv_cafe"
            android:textSize="@dimen/tv_36" />
    </RelativeLayout>

     <LinearLayout
        android:id="@+id/ll_tno_pnum"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_15"
        android:orientation="vertical"
        android:background="@color/white" >

        <RelativeLayout
            android:id="@+id/rl_table_num"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_marginRight="@dimen/margin_5"
            android:padding="@dimen/margin_10"
            android:layout_weight="1"
            android:background="@drawable/bg_shap_table_num"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_icon_tablenum"
                android:layout_width="@dimen/tv_64"
                android:layout_height="@dimen/tv_64"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/margin_8"
                android:background="@drawable/icon_table_num" />
            <TextView
                android:id="@+id/tv_table_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/margin_10"
                android:layout_toRightOf="@+id/tv_icon_tablenum"
                android:hint="选择桌号"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="@dimen/tv_46" />

            <TextView
                android:id="@+id/tv_table_selector"
                android:layout_width="26dp"
                android:layout_height="13dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_10"
                android:background="@drawable/icon_white_arrow_down" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_people_num"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_marginRight="@dimen/margin_5"
            android:layout_marginTop="@dimen/margin_5"
            android:padding="@dimen/margin_10"
            android:layout_weight="1"
            android:background="@drawable/bg_shap_people_num"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_icon_peoplenum"
                android:layout_width="@dimen/tv_64"
                android:layout_height="@dimen/tv_64"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/margin_8"
                android:background="@drawable/icon_people_num"/>

            <TextView
                android:id="@+id/tv_people_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/margin_10"
                android:layout_toRightOf="@+id/tv_icon_peoplenum"
                android:background="@null"
                android:hint="选择人数"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="@dimen/tv_46" />

            <TextView
                android:id="@+id/tv_peoplenum_Selector"
                android:layout_width="26dp"
                android:layout_height="13dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_10"
                android:background="@drawable/icon_white_arrow_down" />
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_create_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15"
        android:layout_marginBottom="@dimen/margin_15"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:padding="@dimen/margin_20"
        android:singleLine="true"
        android:text="点菜时间：2000000000"
        android:textColor="@color/light_gray"
        android:textIsSelectable="false"
        android:textSize="@dimen/tv_36" />
    <!-- 添加桌号 -->

</LinearLayout>