<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_mi_enable"
    android:orientation="vertical"
    android:id="@+id/ll_active">

    <ImageView
        android:id="@+id/iv_bg_top_sep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_bolang"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_10"
        >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/margin_48"
            android:layout_marginBottom="@dimen/margin_48">

            <TextView
                android:id="@+id/coupon_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_coupon_value"
                android:layout_marginLeft="@dimen/margin_24"
                android:text="米"
                android:textColor="@color/white"
                android:textSize="@dimen/tv_30" />

            <TextView
                android:id="@+id/tv_coupon_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/coupon_tag"
                android:layout_marginLeft="@dimen/margin_5"
                android:text="10"
                android:textColor="@color/white"
                android:textSize="@dimen/tv_64" />

        </RelativeLayout>

        <View
            android:id="@+id/sep_vertical"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_30"
            android:layout_marginBottom="@dimen/margin_30"
            android:layout_marginLeft="@dimen/margin_8"
            android:layout_marginRight="@dimen/margin_8"
            android:background="@drawable/xuxian_white" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:paddingLeft="@dimen/margin_15"
            android:gravity="center_vertical"
            android:layout_marginRight="@dimen/margin_24">

            <TextView
                android:id="@+id/tv_active_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="美食拼图aaaaaaaaaaaaaa"
                android:textColor="@color/white"
                android:textSize="@dimen/tv_40"
                android:singleLine="false"/>

            <TextView
                android:id="@+id/tv_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_active_name"
                android:layout_marginTop="@dimen/margin_8"
                android:text="2015.12.25——2015.6.25到期"
                android:textColor="@color/white"
                android:textSize="@dimen/tv_26" />


        </RelativeLayout>
    </LinearLayout>

</LinearLayout>